// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports":true,
    "strict": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": false,
    "noUnusedLocals": true
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "dist/**/*","src/template"]
  // 屏蔽模板文件筛选
}
